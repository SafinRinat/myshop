{% extends "@MyShopAdmin/layout.html.twig" %}

{% block body %}
    <h3>Фотографии товара {{ product.model }}</h3>

    <a href="{{ path("myshop_admin_productphoto_addphoto", {id_product:product.id}) }}">Добавить фото</a>
    <table>
    {% for photo in product.getPhotos() %}
        <tr>
            <td>{{ photo.getTitle() }}</td>
            <td>
                <img src="/photos/{{ photo.getThumbFileName() }}" />
            </td>
            <td>
                ( <a href="{{ path("myshop_admin_productphoto_editphoto", { id_product:product.getId(), id_photo:photo.getId() }) }}">Редактирование</a> /
                <a href="{{ path("myshop_admin_productphoto_deletephoto", { id_product:product.getId(), id_photo:photo.getId()}) }}">Удалить</a> )
            </td>
        </tr>
    {% endfor %}
    </table>
{% endblock %}